<%= render "shared/app_header" %> <!-- =========================================
Gray Section
========================================== -->
<section class="gray-section">
  <div class="container">
    <div class="form-signin">
      <br />
      <br />
      <h1>PencilBox Demo</h1>
      <%= form_tag :class => 'form-signin' do %>
      <% if flash[:alert] %>
      <p id="notice">
        <%= flash[:alert] %>
      </p> <% end %>
      <%= text_field_tag :username, params[:username], :class => 'form-control', :placeholder => 'Email address' %>
      <%= password_field_tag :password, params[:password], :class => 'form-control', :placeholder => 'Password ' %>
      <label class="checkbox">
        <input type="checkbox" value="remember-me">
        Remember me </label>
      <button class="btn btn-lg btn-primary btn-block" type="submit">
        Sign in
      </button>
      <% end %>
      <p><a title="Request new password via e-mail." href="#">Request new password</a></p>      
    </div>
  </div><!-- /container -->
</section><!-- /section -->
<%= render "shared/app_footer" %>
